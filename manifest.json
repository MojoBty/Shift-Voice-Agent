{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "description": "A simple Chrome extension.",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage","scripting","activeTab"],
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Content.js"],
      "run_at": "document_idle"
    }
  ]
}